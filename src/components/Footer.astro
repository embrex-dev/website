---
import { useTranslations } from '../i18n/ui';

const lang = Astro.currentLocale || 'en';
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();

const footerLinks = {
  [t('footer.product')]: [
    { name: t('nav.features'), href: "#features" },
    { name: t('nav.howItWorks'), href: "#how-it-works" },
    { name: t('nav.enterprise'), href: "#enterprise" }
  ],
  [t('footer.resources')]: [
    { name: t('footer.documentation'), href: "/docs" }
  ],
  [t('footer.company')]: [
    { name: t('footer.contact'), href: "#testimonials" },
    { name: t('footer.privacy'), href: "/privacy" }
  ]
};
---

<footer class="bg-gray-900 text-gray-300" role="contentinfo">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 mb-8">
      <!-- Logo and Description -->
      <div class="col-span-2 md:col-span-4 lg:col-span-2">
        <div class="flex items-center mb-4">
          <a href={lang === 'fr' ? '/fr' : '/'} class="text-2xl font-bold text-white hover:text-gray-300 transition-colors">{t('common.embrex')}</a>
        </div>
        <p class="text-sm text-gray-400 mb-4">
          {t('footer.description')}
        </p>
        <div class="flex space-x-4">
          <a href="https://github.com/embrex-dev" class="text-gray-400 hover:text-white transition-colors focus:outline-none focus:ring-2 focus:ring-ember-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded-lg p-1" aria-label="Visit Embrex on GitHub">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Footer Links -->
      {Object.entries(footerLinks).map(([category, links], index) => (
        <div class={index === Object.entries(footerLinks).length - 1 ? "lg:col-start-5" : ""}>
          <h3 class="text-white font-semibold mb-4" id={`footer-category-${index}`}>{category}</h3>
          <ul class="space-y-2" role="list" aria-labelledby={`footer-category-${index}`}>
            {links.map((link) => (
              <li role="listitem">
                <a href={link.href} class="text-sm hover:text-white transition-colors focus:outline-none focus:ring-2 focus:ring-ember-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded">
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>


    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center">
      <div class="text-sm text-gray-400 mb-4 md:mb-0">
        Â© {currentYear} Embrex. {t('footer.copyright')}
      </div>
      <div class="flex items-center space-x-6 text-sm">
        <a href="/privacy" class="hover:text-white transition-colors focus:outline-none focus:ring-2 focus:ring-ember-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded">{t('footer.privacyPolicy')}</a>
        <span class="text-gray-600 dark:text-gray-400">{t('footer.noCookies')}</span>
      </div>
    </div>

    <!-- Symfony Badge -->
    <div class="mt-8 text-center">
      <p class="text-xs text-gray-600 dark:text-gray-400">
        {t('footer.builtWith')}
      </p>
    </div>
  </div>
</footer>
