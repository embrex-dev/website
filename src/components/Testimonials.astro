---
import WaitingListForm from './WaitingListForm.astro';
import { useTranslations } from '../i18n/ui';

const lang = Astro.currentLocale || 'en';
const t = useTranslations(lang);

const stats = [
  { value: "12+", label: t('testimonials.stats.generators') },
  { value: "5+", label: t('testimonials.stats.betaTesters') },
  { value: "100%", label: t('testimonials.stats.openSource') },
  { value: "2025", label: t('testimonials.stats.launchYear') }
];
---

<section id="testimonials" class="py-20 lg:py-32 bg-white dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div class="inline-flex items-center px-4 py-2 mb-4 text-sm font-medium text-orange-600 bg-orange-100 rounded-full dark:bg-orange-900 dark:text-orange-300">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
        {t('testimonials.badge')}
      </div>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-4">
        {t('testimonials.title')} <span class="text-transparent bg-clip-text bg-gradient-to-r from-ember-600 to-flame-600">{t('testimonials.titleHighlight')}</span>
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        {t('testimonials.subtitle')}
      </p>
    </div>


    <!-- Stats -->
    <div class="bg-gradient-to-r from-ember-600 to-flame-600 rounded-2xl p-12 text-white">
      <h3 class="text-2xl md:text-3xl font-bold text-center mb-8">
        {t('testimonials.stats.title')}
      </h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat) => (
          <div class="text-center">
            <div class="text-3xl md:text-4xl lg:text-5xl font-bold mb-2">{stat.value}</div>
            <div class="text-sm opacity-90">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>

    <!-- Waiting List -->
    <div class="mt-16">
      <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">
        {t('testimonials.waitingList')}
      </h3>
      <WaitingListForm />
    </div>
  </div>
</section>