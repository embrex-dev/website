---
import { useTranslations } from '../i18n/ui';

const lang = Astro.currentLocale || 'en';
const t = useTranslations(lang);

const problems = [
  {
    icon: '‚è∞',
    title: t('problem.card1.title'),
    description: t('problem.card1.desc')
  },
  {
    icon: 'üîÑ',
    title: t('problem.card2.title'),
    description: t('problem.card2.desc')
  },
  {
    icon: '‚ùå',
    title: t('problem.card3.title'),
    description: t('problem.card3.desc')
  },
  {
    icon: 'üò§',
    title: t('problem.card4.title'),
    description: t('problem.card4.desc')
  }
];
---

<section id="problem" class="py-20 lg:py-32 bg-gray-50 dark:bg-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div class="inline-flex items-center px-4 py-2 mb-4 text-sm font-medium text-red-600 bg-red-100 rounded-full dark:bg-red-900 dark:text-red-300">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
        </svg>
        {t('problem.badge')}
      </div>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-4">
        {t('problem.title')}<span class="text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-orange-500">{t('problem.titleHighlight')}</span>
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        {t('problem.subtitle')}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {problems.map((problem) => (
        <div class="bg-white dark:bg-gray-900 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-shadow">
          <div class="text-4xl mb-4">{problem.icon}</div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{problem.title}</h3>
          <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">{problem.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>