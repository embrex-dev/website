---
import { useTranslations } from '../i18n/ui';

const lang = Astro.currentLocale || 'en';
const t = useTranslations(lang);
---

<section id="cta" class="py-20 lg:py-32 bg-gradient-to-br from-ember-600 via-flame-600 to-orange-600 relative overflow-hidden" aria-labelledby="cta-heading">
  <!-- Background decoration -->
  <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-white/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-white/10 rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center">
      <!-- Main CTA -->
      <h2 id="cta-heading" class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
        {t('cta.title1')}<br />{t('cta.title2')}
      </h2>

      <p class="text-xl md:text-2xl text-white/90 mb-8 max-w-3xl mx-auto">
        {t('cta.subtitle')}
      </p>

      <!-- Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a href="https://github.com/embrex-dev" class="inline-flex items-center px-8 py-4 text-lg font-medium text-ember-600 bg-white rounded-lg hover:bg-gray-100 transition-all transform hover:scale-105 shadow-xl">
          <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path>
          </svg>
          {t('nav.getStarted')}
        </a>

        <a href="/docs" class="inline-flex items-center px-8 py-4 text-lg font-medium text-white bg-white/20 backdrop-blur-sm rounded-lg hover:bg-white/30 transition-all transform hover:scale-105 shadow-xl">
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          {t('cta.readDocs')}
        </a>
      </div>

      <!-- Quick Install -->
      <div class="bg-black/20 backdrop-blur-sm rounded-lg p-6 max-w-2xl mx-auto">
        <p class="text-white/80 mb-3 text-sm">{t('cta.installVia')}</p>
        <div class="bg-black/30 rounded-lg p-4 flex items-center justify-between">
          <code class="text-white font-mono text-sm md:text-base">
            composer require --dev embrex/embrex-bundle
          </code>
          <button 
            class="ml-4 p-2 text-white/60 hover:text-white transition-colors focus:outline-none focus:ring-2 focus:ring-white/50 focus:ring-offset-2 focus:ring-offset-ember-600" 
            onclick="navigator.clipboard.writeText('composer require --dev embrex/embrex-bundle')"
            aria-label={t('cta.copyCommand')}
            title={t('cta.copyCommand')}>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Features reminder -->
      <div class="mt-12 grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
        <div class="text-white text-center">
          <div class="w-12 h-12 mx-auto mb-3 bg-white/20 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="font-semibold">{t('cta.feature1.title')}</div>
          <div class="text-sm opacity-80">{t('cta.feature1.desc')}</div>
        </div>
        <div class="text-white text-center">
          <div class="w-12 h-12 mx-auto mb-3 bg-white/20 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="font-semibold">{t('cta.feature2.title')}</div>
          <div class="text-sm opacity-80">{t('cta.feature2.desc')}</div>
        </div>
        <div class="text-white text-center">
          <div class="w-12 h-12 mx-auto mb-3 bg-white/20 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
              <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="font-semibold">{t('cta.feature3.title')}</div>
          <div class="text-sm opacity-80">{t('cta.feature3.desc')}</div>
        </div>
      </div>

    </div>
  </div>
</section>
