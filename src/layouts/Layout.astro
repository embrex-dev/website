---
import Navbar from '../components/Navbar.astro';
import LanguageRedirect from '../components/LanguageRedirect.astro';

export interface Props {
  title: string;
  description?: string;
  lang?: string;
}

const { title, description = 'Embrex - Generate boilerplate code from YAML schemas. Save hours of repetitive coding.', lang } = Astro.props;
const currentLang = lang || Astro.currentLocale || 'en';
---

<!DOCTYPE html>
<html lang={currentLang}>
<head>
  <meta charset="UTF-8" />
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />

  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:image" content="/og-image.png" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content="/og-image.png" />

  <!-- Language alternates -->
  <link rel="alternate" hreflang="en" href={`https://embrex.dev${Astro.url.pathname === '/fr' || Astro.url.pathname === '/fr/' ? '/' : Astro.url.pathname.replace('/fr/', '/')}`} />
  <link rel="alternate" hreflang="fr" href={`https://embrex.dev/fr${Astro.url.pathname === '/' ? '' : Astro.url.pathname.replace('/fr/', '/')}`} />
  <link rel="alternate" hreflang="x-default" href={`https://embrex.dev${Astro.url.pathname === '/fr' || Astro.url.pathname === '/fr/' ? '/' : Astro.url.pathname.replace('/fr/', '/')}`} />

  <title>{title}</title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>
  <LanguageRedirect />
  <!-- Skip to main content link for screen readers -->
  <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-ember-600 text-white px-4 py-2 rounded-lg z-50 focus:outline-none focus:ring-2 focus:ring-ember-500 focus:ring-offset-2">Skip to main content</a>
  <Navbar />
  <main id="main">
    <slot />
  </main>

  <style is:global>
    html {
      scroll-behavior: smooth;
    }

    body {
      font-family: 'Inter', system-ui, sans-serif;
      padding-top: 64px; /* Account for fixed navbar */
    }

    code, pre {
      font-family: 'JetBrains Mono', monospace;
    }

    /* Screen reader only class */
    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border: 0;
    }

    .focus\:not-sr-only:focus {
      position: static;
      width: auto;
      height: auto;
      padding: 0.5rem 1rem;
      margin: 0;
      overflow: visible;
      clip: auto;
      white-space: normal;
    }

    /* Ensure focus indicators are always visible */
    *:focus {
      outline: 2px solid transparent;
      outline-offset: 2px;
    }

    /* Custom scrollbar */
    ::-webkit-scrollbar {
      width: 8px;
      height: 8px;
    }

    ::-webkit-scrollbar-track {
      @apply bg-gray-100 dark:bg-gray-900;
    }

    ::-webkit-scrollbar-thumb {
      @apply bg-gray-400 dark:bg-gray-600 rounded;
    }

    ::-webkit-scrollbar-thumb:hover {
      @apply bg-gray-500 dark:bg-gray-500;
    }

    /* Animations */
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .float-animation {
      animation: float 6s ease-in-out infinite;
    }

    .fade-in {
      animation: fadeIn 0.6s ease-out forwards;
    }
  </style>
</body>
</html>
